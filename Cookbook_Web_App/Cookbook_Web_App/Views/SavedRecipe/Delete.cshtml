@model Cookbook_Web_App.Models.SavedRecipe
@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<p> Are you sure you want to delete this recipe, @Model.SavedRecipeID? This will delete all your recipes and comments as well. </p>
<form asp-action="Delete">
    <input type="hidden" asp-for="ID" />
    <input type="hidden" asp-for="UserName" />
    <input type="submit" value="Delete" />
</form>
