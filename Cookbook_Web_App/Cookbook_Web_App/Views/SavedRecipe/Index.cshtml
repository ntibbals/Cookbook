@model IEnumerable<Cookbook_Web_App.Models.SavedRecipe>

@{
    ViewData["Title"] = "Index";

    Layout = "_Layout";
}

<h1>My Recipes</h1>
<div>

    <table>
        <thead>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SavedRecipeID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comments)
                </th>
                <th>
                    Adjust
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SavedRecipeID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.SavedRecipeID">Details of a Recipe</a>
                    <a asp-action="Delete" asp-route-id="@item.SavedRecipeID">Delete a Recipe</a>
                </td>
            </tr>


            }

        </tbody>
        </table>
</div>
