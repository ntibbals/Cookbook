@model Cookbook_Web_App.Models.Recipe
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}
<div>
    <h3>@Model.Name</h3>
</div>
<form asp-action="Save">
    <div asp-validation-summary="ModelOnly"></div>

    @<h2>Instructions:</h2>
    <input type="hidden" asp-for="ID" />
    <input type="hidden" asp-for="Name" />
    <img src="@Model.Image" class="img-rounded" alt="">
    @foreach (var item in Model.Instructions)

    <h4>Ingredients:</h4>
    @foreach (var item in Model.Ingredients)

    {
        <div>
            <input type="hidden" asp-for="Ingredients" />
            <p>@item.Quantity @item.Name</p>
        </div>
    }
    <h4>Instructions:</h4>
    <input type="hidden" asp-for="ID" />
    <input type="hidden" asp-for="Name" />
    @foreach (var item in Model.Instructions)
    {
        <div>
            <input type="hidden" asp-for="Instructions" />
            <p>@item.stepNumberID) @item.action</p>
        </div>
    }

    <div class="form-group">
        <input type="submit" value="Save" class="input-button" />
    </div>
</form>


