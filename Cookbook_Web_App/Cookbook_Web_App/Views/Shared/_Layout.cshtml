    <main>
        <section class="search-holder">
            <form asp-controller="Search" asp-action="Index" class="search-bar">                
                    <input type="text" name="searchRecipes" placeholder="Search recipes by name" class="search-input">
                    <input type="submit" value="Filter" class="search-button input-button" />                
            </form>
        </section>
        <section class="page-holder">
            @RenderBody()
        </section>
    </main>
    <footer class="">
