@model Cookbook_Web_App.Models.User

@{
    ViewData["Title"] = "Index";

    Layout = "_Layout";
}

<section>
    <p> @Model.UserName</p>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.ID">Delete</a>
    <a asp-action="Logout" asp-route-id="@Model.ID">Logout</a>
</section>
<form asp-controller="Comments" asp-action="Index" asp-route-id="@Model.ID" style="display:inline">
    <input type="submit" value="View All Notes" class="input-button" />
</form>