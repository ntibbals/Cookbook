@model IEnumerable<Cookbook_Web_App.Models.Comments>
@{
    ViewData["Title"] = "View";
    Layout = "_Layout";
}
<h1>Comments</h1>
<div>

    <div>

        <div>
            @foreach (var item in Model)
            {

                <div>
                    @Html.DisplayFor(modelItem => item.Comment)
                </div>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>

            }
            <form asp-action="RedirectToDetails">
                <input type="hidden" value="SavedRecipeID" />
                <input type="submit" value="Create a new Note" />
            </form>
            <a asp-action="Create" asp-route-id="SavedRecipeID">Create New Note</a>
        </div>
    </div>
</div>
