@model IEnumerable<Cookbook_Web_App.Models.Comments>
@{
    ViewData["Title"] = "View";
    Layout = "_Layout";
}
<h4>Notes</h4>
<div>

    <div>
        <div>
            @*<form asp-action="RedirectToSave">
                <input type="hidden" value="SavedRecipeID" />
                <input type="submit" value="Back to Recipe" />
            </form>*@
        </div>
        <div>
            @foreach (var item in Model)
            {

                <div>
                   <p> Note: @Html.DisplayFor(modelItem => item.Comment) </p>
                </div>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>

            }

            <div>
                <form>
                    <input type="submit" formaction="@Url.Action("RedirectToDetails")" value="Create Note" class="input-button">
                    <input type="submit" formaction="@Url.Action("RedirectToSave")" value="Back to Recipe" class="input-button" />
                </form>
            </div>

        </div>
    </div>
</div>
