@model Cookbook_Web_App.Models.Comments
@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}
<h1> Test edit</h1>
<div>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="ID" value="@Model.ID" />
        <input type="hidden" asp-for="SavedRecipeID" value="@Model.SavedRecipeID" />
        <label asp-for="Comment"></label>
        <input type="text" placeholder="@Model.Comment" asp-for="Comment"/>
        <input type="submit" value="Edit" class="input-button" />


    </form>
</div>
<div>
    <a asp-action="View">Back to Notes</a>
</div>