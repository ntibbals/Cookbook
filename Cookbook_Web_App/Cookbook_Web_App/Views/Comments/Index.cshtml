@model IEnumerable<Cookbook_Web_App.Models.Comments>

@{ 
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1> Comments Test Layout</h1>

<div>
    <form asp-controller="SavedRecipe" asp-action="Index">
        <input type="submit" value="My Saved Recipes" class="btn btn-primary" />
    </form>
    @foreach (var item in Model)
    {

    <div>
        @Html.DisplayFor(modelItem => item.Comment)
        </div>
    <div>
        @Html.DisplayFor(modelItem => item.Name)
    </div>
    <div>
        <form>
            @Html.ActionLink("Edit", "Edit", new { item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { item.ID }) |
        </form>
        <form asp-controller="SavedRecipe" asp-action="Details" asp-route-id="@item.SavedRecipeID" style="display:inline">
            <input type="submit" value="View Recipe" class="btn btn-primary" />
        </form>
    </div>

    }

</div>